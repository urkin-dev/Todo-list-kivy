<Task>:
    lb: text
    editBtn: edit
    favorite: fav
    imageEdit: editImage
    # lb: text
    orientation: "horizontal"
    size_hint: (1, None)
    height: 60
    spacing: 10
    Label:
        id: text
        color: (0, 0, 0, 1)
        size_hint: 1, 1
        text_size: self.size
        halign:  "left"
        valign: "middle"
    Button:
        id: edit
        text: "edit"
        size_hint: (None, None)
        size: (30, 30)
        pos_hint: {"x": 0, "y": .3}
        background_color: (1, 1, 1, 0)
        Image:
            id: editImage
            source: "./image/edit.png"
            size_hint_y: None
            width: 30
            x: self.parent.x
            y: self.parent.y - self.parent.height - 5
    CheckBox:
        id: fav
        size_hint: (None, None)
        size: (30, 30)
        pos_hint: {"x": 0, "y": .3}
        background_checkbox_normal: "./image/star.png"
        background_checkbox_down: "./image/star_a.png"