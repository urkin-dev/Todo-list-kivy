#:kivy 1.11.1
#: import NoTransition kivy.uix.screenmanager.NoTransition
#:include menu.kv

ScreenManagement:
    transition: NoTransition()
    MainScreen:
    AnotherScreen:

<MainScreen>:
    name: "Tasks"
    main_window: main
    BoxLayout:
        orientation: "horizontal"
        # Side bar
        Menu:
        # Main
        BoxLayout:
            canvas.before:
                Color:
                    rgba: (.95, .95, .95, 1)
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            size_hint: (.8, 1)
            ScrollView:
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                GridLayout:
                    padding: (0, 25, 0, 0)
                    id: main
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    BoxLayout:
                        padding: (10, 0, 0, 0)
                        size_hint: (1, None)
                        height: 37
                        orientation: "horizontal"
                        Label:
                            text: "All tasks"
                            font_size: 25
                            color: (0, 0, 0, 1)
                            size_hint: (None, None)
                            size: (125, 40)         
        Widget:
            size_hint: (.17, 1)

<AnotherScreen>:
    name: "Today"
    BoxLayout:
        orientation: "horizontal"
        # Side bar
        Menu:
        # Main
        BoxLayout:
            canvas.before:
                Color:
                    rgba: (.95, .95, .95, 1)
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            size_hint: (.8, 1)
            ScrollView:
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                GridLayout:
                    padding: (0, 25, 0, 0)
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    BoxLayout:
                        padding: (10, 0, 0, 0)
                        size_hint: (1, None)
                        height: 37
                        orientation: "horizontal"
                        Label:
                            text: "Today"
                            font_size: 25
                            color: (0, 0, 0, 1)
                            size_hint: (None, None)
                            size: (90, 40)
                        Label:
                            text: "date"
                            font_size: 13
                            color: (67, 50, 59, 1)
                            size_hint: (None, None)
                            size: (20, 32)
        Widget:
            size_hint: (.17, 1)